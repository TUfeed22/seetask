{% extends 'base.html.twig' %}


{% block page_header %}

    <div class="page-heading">
        <h3>{{ project.name }}</h3>
    </div>

{% endblock %}

{% block body %}

    <section class="section">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="buttons">
                            <a href="{{ path('app_project_update', {'id': project.id}) }}" class="btn btn-outline-primary">Редактировать</a>
                            <a href="{{ path('app_project_delete', {'id': project.id}) }}" class="btn btn-outline-danger">Удалить</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-lg-2">
                <div class="card">
                    <div class="card-header">
                        Статус
                    </div>
                    <div class="card-body">
                        {{ component('StatusComponent', {
                            status: project.status
                        }) }}
                    </div>
                </div>
            </div>
            <div class="col-12 col-lg-2">
                <a href="{{ path('app_task') }}">
                    <div class="card">
                        <div class="card-header">
                            Задачи
                        </div>
                        <div class="button-mini">
                            <object>
                                <a href="{{ path('app_task_add') }}" title="Создать новую задачу">
                                    <i class="iconly-boldPlus"></i>
                                </a>
                            </object>
                        </div>
                        <div class="card-body">
                            {{ project.tasks|length }}
                        </div>
                    </div>
                </a>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        Описание
                    </div>
                    <div class="card-body">
                        {{ project.description }}
                    </div>
                </div>
            </div>
        </div>

    </section>

{% endblock %}

