{% extends 'base.html.twig' %}


{% block page_header %}

    <div class="page-heading">
        <h3>{{ title }}</h3>
    </div>

{% endblock %}

{% block body %}
    <section class="section">
        <div class="card">
            <div class="card-body">
                {{ form_start(addProjectForm) }}

                    {{ form_widget(addProjectForm.name) }}

                    {{ form_widget(addProjectForm.description) }}
                    <button type="submit" class="btn btn-primary btn-block btn-lg shadow-lg mt-5">Сохранить</button>
                {{ form_end(addProjectForm) }}
            </div>
        </div>

    </section>
{% endblock %}
