{% extends 'base.html.twig' %}


{% block page_header %}

    <div class="page-heading">
        <div class="page-title">
            <div class="row">
                <div class="col-12 col-md-6 order-md-1 order-last">
                    <h3>{{ title }}</h3>
                    <p class="text-subtitle text-muted">{{ subtitle }}</p>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block body %}
    <section class="section">
        <div class="card">
            <div class="card-body">
                {{ form_start(addAndUpdateTaskForm) }}

                <div class="form-group">
                    {{ form_widget(addAndUpdateTaskForm.name) }}
                </div>
                <div class="form-floating form-group">
                    {{ form_widget(addAndUpdateTaskForm.description) }}
                    {{ form_label(addAndUpdateTaskForm.description, 'Описание задачи') }}
                </div>

                <fieldset class="form-group">
                    {{ form_widget(addAndUpdateTaskForm.project) }}
                </fieldset>

                <div class="col-sm-12 d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary mt-5">Сохранить</button>
                </div>

                {{ form_end(addAndUpdateTaskForm) }}
            </div>
        </div>

    </section>
{% endblock %}
