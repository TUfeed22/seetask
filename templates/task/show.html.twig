{% extends 'base.html.twig' %}


{% block page_header %}
    <div class="page-heading">
        <div class="page-title">
            <div class="row">
                <div class="col-12 col-md-6 order-md-1 order-last">
                    <h3>{{ task.name }}</h3>
                    <p class="text-subtitle text-muted">{{ subtitle }}</p>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block body %}

    <section class="section">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="buttons">
                        <a href="{{ path('app_task_update', {'id': task.id}) }}" class="btn btn-outline-primary">Редактировать</a>
                        <a href="" class="btn btn-outline-danger">Удалить</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-header">
                Описание
            </div>
            <div class="card-body">
                {{ task.description }}
            </div>
        </div>
        {% if task.project %}
            <div class="card">
                <div class="card-header">
                    Проект
                </div>
                <div class="card-body">
                    {{ task.project.name }}
                </div>
            </div>
        {% endif %}

    </section>

{% endblock %}

